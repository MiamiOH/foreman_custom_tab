<table id="custom_table" class="<%= table_css_classes %>">
  <thead>
    <tr>
      <th colspan="2"><%= _('Summary') %></th>
    </tr>
  </thead>
  <tbody>
    <% summary_fields(host).each do |name, value| %>
      <tr>
        <td><%= name %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
